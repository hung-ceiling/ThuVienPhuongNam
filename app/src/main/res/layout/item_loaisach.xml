<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="#e4fde1"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                 android:id="@+id/temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Loại: "
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/item_lv_maloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mã Loại"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/temp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Nhà Sx: "
                android:textStyle="bold"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/item_lv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Nhà Sx"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/temp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Tên Thể loại:"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/item_lv_theloai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                android:textStyle="bold"
                android:textSize="10sp"/>
        </LinearLayout>
